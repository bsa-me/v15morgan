<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="po_line_report_view_tree" model="ir.ui.view">
        <field name="name">po.report.view.tree</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_order"/>
                <field name="partner_id" string="Vendor"/>
                <field name="order_id"/>
                <field name="company_id"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="state"/>
                <field name="invoice_lines" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="po_line_report_action" model="ir.actions.act_window">
        <field name="name">Purchase orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="po_line_report_view_tree"/>
    </record>

    <menuitem id="po_line_report_menu"
              name="Purchase Orders"
              parent="purchase.purchase_report"
              action="po_line_report_action"/>
</odoo>