<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payslip_reject_reason_form" model="ir.ui.view">
        <field name="name">payslip.reject.reason.form</field>
        <field name="model">payslip.reject.reason</field>
        <field name="arch" type="xml">
            <form>
              <sheet>
                <group>
                  <group>
                    <field name='payslip_id' invisible='1'/>
                    <field name='payslip_ids' invisible='1'/>
                    <field name='reason'/>
                  </group>
                </group>
              </sheet>
              <footer>
                <button string="Validate" name="reject" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-default" special="cancel"/>
              </footer>
            </form>
        </field>
    </record>

    <record id="payslip_reject_reason_action" model="ir.actions.act_window">
        <field name="name">Reason</field>
        <field name="res_model">payslip.reject.reason</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="payslip_reject_reason_form"/>
    </record>
</odoo>