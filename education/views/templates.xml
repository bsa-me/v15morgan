						<table class="table table-sm o_main_table">
							<thead>
								<tr>
									<th class="text-left"><span>Item</span></th>
									<th class="text-left"><span>Unit Price</span></th>
									<th class="text-left"><span>Taxes</span></th>
									<th class="text-left"><span>Total</span></th>
								</tr>
							</thead>
							<tbody>
								<t t-set="companies" t-value="o.event_id._get_logged_in_companies()"/>
								<t t-set="currency" t-value="request.env['res.company'].browse(companies[0]).currency_id"/>
								<t t-foreach="o.event_id.event_ticket_ids.filtered(lambda e: e.ticket_company_id.id in companies)" t-as="ticket">
									<tr>
										<td class="text-left" style="color: black; !important;">
										<b>	Tuition Fees - <span t-field="ticket.name"/> </b>
											<t t-if="ticket.end_sale_datetime">
												<br/>
												<small>Sales end: <span t-field="ticket.end_sale_datetime" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></small>
											</t>
										</td>
										<t t-set="ticket_price" t-value="ticket.company_currency._convert(ticket.price, currency, request.env['res.company'].browse(companies[0]), datetime.date.today())"/>
										<td class="text-left"><span t-esc="ticket_price" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/></td>
										<td class="text-left">
											<t t-foreach="ticket.tax_ids" t-as="tax">
												<span t-field="tax.name"/>
											</t>
										</td>
										<td class="text-left"><span t-field="ticket.amount_taxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/></td>
									</tr>
									
									<t t-if="ticket.mapped_item_ids">
										<tr>
											<td colspan="4" style="padding-left: 20px;">Mapped Items</td>
										</tr>
										
										<t t-foreach="ticket.mapped_item_ids" t-as="item">
											<tr style="background: rgba(0,0,0,0.1);">
												<td class="text-left" style="padding-left: 20px;">
													<span t-field="item.name"/>
												</td>
												<t t-set="main_pricelist" t-value="o._get_logged_in_company().main_pricelist_id"/>
												<t t-set="item_price" t-value="main_pricelist.get_product_price(item,1,False)"/>
												<td class="text-left">
													<span t-esc="item_price" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/>
												</td>
												<td class="text-left">
													<t t-foreach="item.taxes_id.filtered(lambda t: t.company_id.id in companies)" t-as="tax">
															<span t-field="tax.name"/>
													</t>
												</td>
												<td class="text-left">
													<span t-esc="item.taxes_id.filtered(lambda t: t.company_id.id in companies).compute_all(item_price)['total_included']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/>
												</td>
											</tr>
										</t>
										
									</t>
									
								</t>
								
									
							</tbody>
						</table>

						
						<h5 style="margin-top:30px;"/>
						<p t-field="o.event_id.course_id.short_description"/>
							
					</div>
				</t>
			</t>
