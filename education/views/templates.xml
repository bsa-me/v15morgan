<odoo>
    <template id="website_event_track.event_track_template_new">
	    <p>New session <a href="#" t-att-data-oe-model="track._name" t-att-data-oe-id="track.id"> <t t-esc="track.name"/></a></p>
	    <ul>
	        <li><b>Instructor</b>: <t t-esc="track.partner_name or track.partner_email"/></li>
	        <li><b>Mail</b>: <a t-attf-href="mailto:#{track.partner_email}"><t t-esc="track.partner_email"/></a></li>
	        <li><b>Phone</b>: <t t-esc="track.partner_phone"/></li>
	        <li><b>Date</b>: <t t-esc="track.date"/></li>
	    </ul>
	</template>
	
	<template id="event_track_attendance">
				<t t-call="web.html_container">
				
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
						<h2>Attendance Sheet</h2>
						
						<table class="table table-sm table-bordered">
                        	<tr>
	                        	<td><strong>Program</strong></td>
	                        	<td><span t-field="o.event_id.program_id.name"/></td>
	                        	
	                        	<td><strong>Course</strong></td>
	                        	<td><span t-field="o.event_id.course_id.name"/></td>
							</tr>
							
							<tr>
	                        	<td><strong>Session</strong></td>
	                        	<td><span t-field="o.name"/></td>
	                        	
	                        	<td><strong>Instructor</strong></td>
	                        	<td><span t-field="o.employee_id.name"/></td>
							</tr>
							
							<tr>
	                        	<td><strong>Date</strong></td>
	                        	<td><span t-field="o.date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
	                        	
	                        	<td><strong>Schedule</strong></td>
	                        	<td><span t-field="o.track_from" t-options="{&quot;widget&quot;: &quot;float_time&quot;}"/> -  <span t-field="o.to" t-options="{&quot;widget&quot;: &quot;float_time&quot;}"/></td>
							</tr>
							
						</table>
						
		
		<table class="table table-sm o_main_table">
			<thead>
				<tr>
					<th class="text-left"><span>Ref</span></th>
					<th class="text-left"><span>Name</span></th>
					<th class="text-left"><span>Attended</span></th>
					<th class="text-left"><span>Signature</span></th>
				</tr>
			</thead>
			<tbody>
				<t t-foreach="o.attendance_ids" t-as="a">
					
						<tr>
							<td class="text-left"><span t-field="a.id"/></td>
							<td class="text-left"><span t-field="a.partner_id.name"/></td>
							<td class="text-left">
							  <t t-if="a.attended">
							  <span>  Yes </span>
							  </t>
							  <t t-else="">
							    <span>  No </span>
							  </t>
							</td>
							<td class="text-left"/>
						</tr>
					
				</t>
				<t t-foreach="o.registration_ids.mapped('attendance_ids').filtered(lambda attendance: attendance.attended == True)" t-as="a">
						<tr>
							<td class="text-left"><span t-field="a.id"/></td>
							<td class="text-left"><span t-field="a.partner_id.name"/></td>
							<td class="text-left"/>
						</tr>
				</t>
			</tbody>				
		</table>
		
		<div class="offset-8">
			<strong>Instructor Signature</strong>
		</div>
		
	</div>
				</t>
			</t>
</t>
        </template>
        
<template id="event_details">
							<t t-call="web.html_container">
				
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
						<h2><span t-field="o.name"/></h2>
						
						<table class="table table-sm table-bordered" style="margin-top:30px;">
                        	<tr>
	                        	<td><strong>Company</strong></td>
	                        	<td>
		                        	<t t-if="o._get_logged_in_company().parent_id">
		                        		<span t-field="o._get_logged_in_company().parent_id.name"/> /
		                        	</t>
		                        	<span t-field="o._get_logged_in_company().name"/>
		                        </td>
	                        	
	                        	<td><strong>Class Room</strong></td>
	                        	<td><span t-field="o.location_id.name"/></td>
							</tr>
							
							<tr>
								
								<td><strong>From</strong></td>
	                        	<td><span t-field="o.date_begin" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
	                        	
	                        	<td><strong>To</strong></td>
	                        	<td><span t-field="o.date_end" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
	                        	
							</tr>
							
							<tr>
	                        	<td><strong>Duration</strong></td>
	                        	<td><span t-field="o.track_count"/> sessions</td>
	                        	
	                        	<td><strong>Type</strong></td>
	                        	<td><span t-field="o.event_type_id.name"/></td>
							</tr>
							
							<tr>
	                        	<td><strong>Location</strong></td>
	                        	<td>
		                        	<t t-if="o.location_id.location_id">
		                        		<span t-field="o.location_id.location_id"/>
		                        	</t>
		                        	<t t-if="o.address_id.country_id.name and o.address_id.city">
		                        		 / 
		                        	</t>
		                        	<t t-if="o.address_id.city">
		                        		<span t-field="o.address_id.city"/>
		                        	</t>
		                        </td>
	                        	
	                        	<td><strong>Address</strong></td>
	                        	<td>
		                        	<t t-if="o.address_id.street">
			                        	<span t-field="o.address_id.street"/>
		                        	</t>
		                        </td>
							</tr>
							
							<tr>
	                        	<td><strong>Phone</strong></td>
	                        	<td>
		                        	<t t-if="o.address_id.phone">
		                        		<span t-field="o.address_id.phone"/>
		                        	</t>
	                        	</td>
	                        	
	                        <!--	<td><strong>Email</strong></td>
	                        	<td>
		                        	<t t-if="o.location_id.location_id.email">
		                        		<span t-field="o.location_id.location_id.email"/>
		                        	</t>
	                        	</td>
	                        	<td><strong>Timezone</strong></td>
	                        	<td>
		                        	<t t-if="o.company_id.date_tz">
		                        		<span t-field="o.company_id.date_tz"/>
		                        	</t>
	                        	</td>   -->
							</tr>
							
						</table>
						
						<h5 style="margin-top:30px;">Subject Area</h5>
						<p t-field="o.course_id.subject_area" t-options="{&quot;widget&quot;: &quot;html&quot;}"/>
						
						<h5 style="margin-top:30px;">Schedule</h5>
						<table class="table table-sm o_main_table">
							<thead>
								<tr>
									<th class="text-left"><span>Day</span></th>
									<th class="text-left"><span>Date</span></th>
									<th class="text-left"><span>Time</span></th>
									<th class="text-left"><span>Timezone</span></th>
									<th class="text-left"><span>Session Title</span></th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="o.sudo().track_ids" t-as="session">
									<t t-if="session.stage_id.is_cancel == false">
										<tr>
											<td class="text-left">
												<t t-if="session.day">
													<t t-esc="dict(session.fields_get(allfields=['day'])['day']['selection'])[session.day]"/>
												</t>
											</td>
											<td class="text-left">
												<t t-if="session.date">
													<span t-field="session.date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
												</t>
											</td>
											<td class="text-left">
												<t t-if="session.track_from and session.to">
													<t t-esc="'%02d:%02d' % (int(str(session.track_from).split('.')[0]), int(float(str('%.2f' % session.track_from).split('.')[1])/100*60))"/> - 
													<t t-esc="'%02d:%02d' % (int(str(session.to).split('.')[0]), int(float(str('%.2f' % session.to).split('.')[1])/100*60))"/>
												</t>
											</td>
											
											<td class="text-left"><span t-field="session.date_tz"/></td>

											<td class="text-left"><span t-field="session.name"/></td>
										</tr>
									</t>
								</t>
							</tbody>				
						</table>
						
						<h5 style="margin-top:30px;">Pricing</h5>
						
						<table class="table table-sm o_main_table">
							<thead>
								<tr>
									<th class="text-left"><span>Item</span></th>
									<th class="text-left"><span>Unit Price</span></th>
									<th class="text-left"><span>Taxes</span></th>
									<th class="text-left"><span>Total</span></th>
								</tr>
							</thead>
							<tbody>
								<t t-set="companies" t-value="o._get_logged_in_companies()"/>
								<t t-set="currency" t-value="request.env['res.company'].browse(companies[0]).currency_id"/>
								<t t-foreach="o.event_ticket_ids.filtered(lambda e: e.ticket_company_id.id in companies)" t-as="ticket">
									<tr>
										<td class="text-left" style="color: black; !important;">
										<b>	Tuition Fees - <span t-field="ticket.name"/> </b>
											<t t-if="ticket.end_sale_datetime">
												<br/>
												<small>Sales end: <span t-field="ticket.end_sale_datetime" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></small>
											</t>
										</td>
										<t t-set="ticket_price" t-value="ticket.company_currency._convert(ticket.price, currency, request.env['res.company'].browse(companies[0]), datetime.date.today())"/>
										<td class="text-left"><span t-esc="ticket_price" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/></td>
										<td class="text-left">
											<t t-foreach="ticket.tax_ids" t-as="tax">
												<span t-field="tax.name"/>
											</t>
										</td>
										<td class="text-left"><span t-field="ticket.amount_taxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/></td>
									</tr>
									
									<t t-if="ticket.mapped_item_ids">
										<tr>
											<td colspan="4" style="padding-left: 20px;">Mapped Items</td>
										</tr>
										
										<t t-foreach="ticket.mapped_item_ids" t-as="item">
											<tr style="background: rgba(0,0,0,0.1);">
												<td class="text-left" style="padding-left: 20px;">
													<span t-field="item.name"/>
												</td>
												<t t-set="main_pricelist" t-value="o._get_logged_in_company().main_pricelist_id"/>
												<t t-set="item_price" t-value="main_pricelist.get_product_price(item,1,False)"/>
												<td class="text-left">
													<span t-esc="item_price" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/>
												</td>
												<td class="text-left">
													<t t-foreach="item.taxes_id.filtered(lambda t: t.company_id.id in companies)" t-as="tax">
															<span t-field="tax.name"/>
													</t>
												</td>
												<td class="text-left">
													<span t-esc="item.taxes_id.filtered(lambda t: t.company_id.id in companies).compute_all(item_price)['total_included']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/>
												</td>
											</tr>
										</t>
										
									</t>
									
								</t>
								
									
							</tbody>
						</table>

						
						<h5 style="margin-top:30px;"/>
						<p t-field="o.course_id.short_description"/>
							
					</div>
				</t>
			</t>
		</t>
    </template>

