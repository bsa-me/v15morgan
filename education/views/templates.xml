                        	<tr>
	                        	<td><strong>Company</strong></td>
	                        	<td>
		                        	<t t-if="o.event_id._get_logged_in_company().parent_id">
		                        		<span t-field="o.event_id._get_logged_in_company().parent_id.name"/> /
		                        	</t>
		                        	<span t-field="o.event_id._get_logged_in_company().name"/>
		                        </td>
	                        	
	                        	<td><strong>Class Room</strong></td>
	                        	<td><span t-field="o.event_id.location_id.name"/></td>
							</tr>
							
							<tr>
								
								<td><strong>From</strong></td>
	                        	<td><span t-field="o.event_id.date_begin" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
	                        	
	                        	<td><strong>To</strong></td>
	                        	<td><span t-field="o.event_id.date_end" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
	                        	
							</tr>
							
							<tr>
	                        	<td><strong>Duration</strong></td>
	                        	<td><span t-field="o.event_id.track_count"/> sessions</td>
	                        	
	                        	<td><strong>Type</strong></td>
	                        	<td><span t-field="o.event_id.event_type_id.name"/></td>
							</tr>
							
							<tr>
	                        	<td><strong>Location</strong></td>
	                        	<td>
		                        	<t t-if="o.event_id.location_id.location_id">
		                        		<span t-field="o.event_id.location_id.location_id"/>
		                        	</t>
		                        	<t t-if="o.event_id.address_id.country_id.name and o.address_id.city">
		                        		 / 
		                        	</t>
		                        	<t t-if="o.event_id.address_id.city">
		                        		<span t-field="o.event_id.address_id.city"/>
		                        	</t>
		                        </td>
	                        	
	                        	<td><strong>Address</strong></td>
	                        	<td>
		                        	<t t-if="o.event_id.address_id.street">
			                        	<span t-field="o.event_id.address_id.street"/>
		                        	</t>
		                        </td>
							</tr>
							
							<tr>
	                        	<td><strong>Phone</strong></td>
	                        	<td>
		                        	<t t-if="o.event_id.address_id.phone">
		                        		<span t-field="o.event_id.address_id.phone"/>
		                        	</t>
	                        	</td>
	                        	
	                        <!--	<td><strong>Email</strong></td>
	                        	<td>
		                        	<t t-if="o.location_id.location_id.email">
		                        		<span t-field="o.location_id.location_id.email"/>
		                        	</t>
	                        	</td>
	                        	<td><strong>Timezone</strong></td>
	                        	<td>
		                        	<t t-if="o.company_id.date_tz">
		                        		<span t-field="o.company_id.date_tz"/>
		                        	</t>
	                        	</td>   -->
							</tr>
							
						</table>
						
						<h5 style="margin-top:30px;">Subject Area</h5>
						<p t-field="o.event_id.course_id.subject_area" t-options="{&quot;widget&quot;: &quot;html&quot;}"/>
						
						<h5 style="margin-top:30px;">Schedule</h5>
						<table class="table table-sm o_main_table">
							<thead>
								<tr>
									<th class="text-left"><span>Day</span></th>
									<th class="text-left"><span>Date</span></th>
									<th class="text-left"><span>Time</span></th>
									<th class="text-left"><span>Timezone</span></th>
									<th class="text-left"><span>Session Title</span></th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="o.event_id.sudo().track_ids" t-as="session">
									<t t-if="session.stage_id.is_cancel == false">
										<tr>
											<td class="text-left">
												<t t-if="session.date">
													<t t-esc="session.date.strftime('%A')"/>
												</t>
											</td>
											<td class="text-left">
												<t t-if="session.date">
													<span t-field="session.date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
												</t>
											</td>
											<td class="text-left">
												<t t-if="session.track_from and session.to">
													<t t-esc="'%02d:%02d' % (int(str(session.track_from).split('.')[0]), int(float(str('%.2f' % session.track_from).split('.')[1])/100*60))"/> - 
													<t t-esc="'%02d:%02d' % (int(str(session.to).split('.')[0]), int(float(str('%.2f' % session.to).split('.')[1])/100*60))"/>
												</t>
											</td>
											
											<td class="text-left"><span t-field="session.date_tz"/></td>

											<td class="text-left"><span t-field="session.name"/></td>
										</tr>
									</t>
								</t>
							</tbody>				
						</table>
						
