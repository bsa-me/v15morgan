<odoo>
    <data>
        
        <record id="utm_campaign_form" model="ir.ui.view">
            <field name="name">utm.campaign.form</field>
            <field name="model">utm.campaign</field>
            <field name="inherit_id" ref="utm.utm_campaign_view_form" />
            <field name="arch" type="xml">
<data>
              <xpath expr="//button[@name='action_redirect_to_quotations']" position="after">
                <button class="oe_stat_button" icon="fa-money" type="object" name="show_related_expenses">
                  <field name="expense_count" string="Expenses" widget="statinfo"/>
                </button>
              </xpath>
              
              <xpath expr="//group[@id='top-group']" position="attributes">
                  <attribute name="invisible">1</attribute>
                </xpath>
              <xpath expr="//div[@name='button_box']" position="after">
                    <group>
                    <group id="top-group">
                        <field name="name" string="Campaign Name"/>
                        <field name="user_id"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                        <field name="currency_usd" invisible="1"/>
                        <field name="cost_per_lead" widget="monetary" options="{'currency_field': 'currency_usd'}"/>
                        <field name="cost_per_acquisition" widget="monetary" options="{'currency_field': 'currency_usd'}"/>
                        <label for="roi"/>
                        <div>
                          <field name="roi" class="oe_inline"/> %
                        </div>
                    </group>
                    <group>
                      <field name="state" invisible="1"/>
                      <field name="company_id"/>
                      <field name="source_id"/>
                      <field name="medium_id"/>
                      <field name="term_id"/>
                      <field name="program_id"/>
                    </group>
                    </group>
                    <notebook>
                    </notebook>
              </xpath>                

            </data>
            </field>
        </record>

    </data>
</odoo>