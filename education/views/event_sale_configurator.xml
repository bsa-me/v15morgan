<odoo>
    <data>
        
        <record id="event_configurator_view_form_inherit" model="ir.ui.view">
            <field name="name">event.configurator.view.form</field>
            <field name="model">event.event.configurator</field>
            <field name="inherit_id" ref="event_sale.event_configurator_view_form" />
            <field name="arch" type="xml">
				<data>
                <xpath expr="//field[@name='event_ticket_id']" position="attributes">
                  <attribute name="domain">[('event_id', '=', event_id),('ticket_company_id', '=', company_id),('product_id','=',product_id)]</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                  <field name="company_id" invisible="1"/>
                </xpath>
              </data>
            </field>
        </record>

    </data>
</odoo>