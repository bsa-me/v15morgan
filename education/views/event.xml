                </xpath>
                <xpath expr="//field[@name='event_id']" position="after">
                    <field name="day" invisible="1" />
                    <field name='instructor_ids' invisible='1'/>
                    <field name="employee_id" domain="[('id','in',instructor_ids)]"/>
                </xpath>
                <xpath expr="//field[@name='day']" position="after">
                    <field name="track_from" widget="float_time" />
                    <field name="to" widget="float_time" />
                </xpath>
                <xpath expr="//field[@name='location_id']" position="after">
                    <xpath expr="//field[@name='employee_id']" position="move" />
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="start_date" widget="daterange" invisible="1" />
                    <field name="end_date" widget="daterange" invisible="1" />
                    <field name="price" />
                    <field name="tax_ids" widget="many2many_tags" />
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="course_id" invisible="1" />
                </xpath>

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="nb_attendance" />
                    <field name='avg_attendance'/>
                </xpath>

                <xpath expr="//field[@name='duration']" position="after">
                    <field name="date_tz"/>
                </xpath>



              <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="surveys" string="Surveys">
                    <group>
                        <field name="survey_ids" context="{'default_event_id': event_id, 'default_session_id': id, 'default_instructor_id': employee_id, 'default_survey_type': 'instructor'}" nolabel="1">
                            <tree>
                                <field name="id" />
                                <field name="title" />
                                <field name="survey_type" />
                                <field name="answer_score_avg" avg="Average Score" />
                            </tree>
                        </field>
                    </group>
                </page>
              </xpath>

            </field>
