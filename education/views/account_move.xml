<odoo>
    <data>
        <record id="account_move_inherit" model="ir.ui.view">
            <field name="name">account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">

               <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="invisible">1</attribute>
               </xpath>

                <data>
                  <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="replace"/>

                  <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='partner_id']" position="attributes">
                  <attribute name='readonly'>1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                  <attribute name='readonly'>1</attribute>
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '=', 'posted')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="attributes">
                  <attribute name='readonly'>1</attribute>
                </xpath>

                <xpath expr="//field[@name='currency_id']" position="attributes">
                  <attribute name='readonly'>1</attribute>
                </xpath>

                  <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                  </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='name']" position="after">
                  <field name='term_id' options="{'no_create': True, 'no_open': True}"/>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='discount']" position="attributes">
                  <attribute name='string'>Discount</attribute>
                </xpath>

                  <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/div[1]/label[1]" position="attributes">
                  <attribute name='attrs'>{'invisible': [('move_type', 'not in', ('out_invoice', 'out_receipt'))]}</attribute>
                </xpath>

                  <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/div[1]/label[1]" position="after">
                  <label for="invoice_date" string="Credit Note Date" style="font-weight:bold;" attrs="{'invisible': [('move_type', 'not in', ('out_refund'))]}"/>
                </xpath>
              <xpath expr="//field[@name='tax_totals_json']" position="attributes">
                <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="//field[@name='tax_totals_json']" position="before">
                  <field name="amount_discount" groups="product.group_discount_per_so_line" string="Total Discount" sum="Total Discount" widget="monetary" optional="hide"/>
                  <field name="amount_untaxed" string="Untaxed Amount (After Discount)"/>
                  <field name="amount_tax" string="Taxes"/>
                  <field name="amount_total" string="Total"/>
            </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='account_id']" position="attributes">
                  <attribute name="optional">show</attribute>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='price_unit']" position="attributes">
                  <attribute name="string">Unit Price</attribute>
                </xpath>

              <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]/field[@name='line_ids']/tree[1]/field[@name='name']" position="after">
                <field name="term_id" attrs="{}" invisible="1"/>
              </xpath>


                </data>

            </field>
        </record>

    </data>
</odoo>