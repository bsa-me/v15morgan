<odoo>
    <data>
        <record id="hr_attendance_tree_inherit" model="ir.ui.view">
            <field name="name">hr.attendance.tree.inherit</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
            <field name="arch" type="xml">
                <data>
                  <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-danger">same_date==True</attribute>
                    </xpath>
                  <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="session_course"/>
                    <field name="session_id"/>
                    <field name="session_date" string="Session Date" widget="date"/>
                    <field name="track_from" widget="float_time"/>
                    <field name="to" widget="float_time"/>
                    <field name="duration" widget="float_time"/>
                  </xpath>
                  <xpath expr="//field[@name='worked_hours']" position="after">
                    <field name='contract_currency_id' invisible='1'/>
                    <field name='gross_rate' />
                    <field name="same_date" invisible='1'/>
                  </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>