<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_invoice_notification" model="mail.template">
        <field name="name">Invoice Notification</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="email_from">{{ (object.invoice_user_id.email_formatted or user.email_formatted) }}</field>
        <field name="subject">Thank you for your purchase</field>
        <field name="body_html" type="html">
            <br/>
            <span style="font-size:12pt">Dear
                <t t-out="object.partner_id.name"/>
            </span>
            <br/>
            <br/>
            <span style="font-size:12pt">Thank you for your purchase!</span>
            <br/>
            <br/>
            <span style="font-size:12pt">We would like to inform you that your order (<t t-out="object.name"/>) is now
                being processed.
            </span>
            <span style="font-size:12pt">Please find attached your invoice for reference.</span>
            <br/>
            <span style="font-size:12pt">Here's a summary of your order:</span>
            <br/>
            <br/>
            <table class="table table-condensed rtl-table" name="invoice_line_table">
                <thead>
                    <th>Item</th>
                    <th>Description</th>
                    <th class="text-right">Quantity</th>
                    <th>Unit Price</th>
                    <th with="15%" class="text-right">Tax Rate</th>
                    <th>Subtotal</th>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="object.invoice_line_ids" t-as="l">
                        <td>
                            <strong>
                                <span t-field="l.product_id.name"/>
                            </strong>
                        </td>
                        <td>
                            <t t-if="l.name">
                                <span t-field="l.name"/>
                            </t>
                        </td>
                        <t t-if="l.move_id.move_type != 'in_refund'">
                            <td class="text-right">
                                <span t-field="l.quantity" t-field-options="{&quot;widget&quot;:&quot;integer&quot;}"/>
                                <span t-field="l.uom_id" groups="product.group_uom"/>
                            </td>
                        </t>
                        <t t-if="l.move_id.move_type != 'in_refund'">
                            <td class="text-right">
                                <span t-field="l.price_unit"
                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: object.currency_id}"/>
                            </td>
                        </t>
                        <t t-if="l.move_id.move_type != 'in_refund'">
                            <td class="text-right">
                                <span t-out="', '.join(map(lambda x: (x.description or x.name), l.tax_ids))"/>
                            </td>
                        </t>
                        <td class="text-right" id="subtotal">
                            <span t-field="l.price_subtotal"
                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: object.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br/>
            <br/>
            <span style="font-size:12pt">If you have any questions regarding your purchase, please feel free to</span>
            <span style="font-size:12pt;font-weight:normal;text-decoration:underline">
                <a href="">
                    contact us
                </a>
            </span>
            <br/>
            <br/>
            <span style="font-size:12pt">Thank you for choosing Morgan!</span>
            <br/>
            <br/>
            <span style="font-size:12pt">Sincerely,</span>
            <br/>
            <span style="font-size:12pt">The Morgan Team.</span>
        </field>
        <field name="report_template" ref="account.account_invoices"/>
        <field name="report_name">Invoice Details</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
    </record>

    <record id="email_template_receipt_notification" model="mail.template">
        <field name="name">Receipt Notification</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="email_from">{{ (object.invoice_user_id.email_formatted or user.email_formatted) }}</field>

        <field name="subject">Thank you for your payment</field>
        <field name="body_html" type="html">
            <p style="margin:0px 0 12px 0;box-sizing:border-box;">
                <span style="font-size:12pt">Dear
                    <t t-out="object.partner_id.name"/>
                    <br/>
                    <br/>Thank you for your payment!
                    <br/>
                    <br/>We just wanted to let you know that your payment for the following amount (
                    <t
                            t-out="object.amount"/>
                    <t t-out="object.currency_id.name"/>
                    ) has been successful.
                    Please find your receipt (<t t-out="object.name"/>) attached.
                    <br/>

                    <br/>If you have any questions regarding your recent purchase, please feel free to
                </span>
                <a href="">
                    contact us
                </a>
                <span style="font-size:12pt">.
                    <br/>
                    <br/>Thanks again for choosing Morgan!
                    <br/>
                    <br/>Sincerely,
                    <br/>The Morgan Team.
                </span>
                <br/>
            </p>
        </field>
        <field name="report_template" ref="account.action_report_payment_receipt"/>
        <field name="report_name">Payment Receipt</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
    </record>

    <record id="email_template_quotation_notification" model="mail.template">
        <field name="name">Quotation Notification</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="email_from">{{ (user.email_formatted) }}</field>

        <field name="subject">Quotation Notification</field>
        <field name="body_html" type="html">
            <h3 style="margin:0px 0 6px 0;box-sizing:border-box;font-size:16.9px;color:#091124;line-height:1.2;font-weight:500;">
                <strong style="box-sizing:border-box;font-weight:500;">Your Course Quotation</strong>
            </h3>
            <br/>
            <h4 style="margin:0px 0 6px 0;box-sizing:border-box;font-size:15.6px;color:#091124;line-height:1.2;font-weight:500;">
                <strong style="box-sizing:border-box;font-weight:500;">"Quotation Expiry Date, Quotation Attached"</strong>
            </h4>
            <br/>
            <span style="font-size:12pt">Dear <t t-out="object.partner_id.name"/></span>
            <br/>
            <span style="font-size:12pt">We are happy to share with you a quotation for the following courses
                   <t t-foreach="object.order_line" t-as="line" data-oe-t-inline="true">
                      <t t-out="line.name"/> ,
                 </t>
           </span>
            <span style="font-size:12pt">Please find it attached.</span>
            <br/>
            <t t-if="object.payment_term_id">
            <span style="font-size:12pt">This quotation is valid for <t t-out="object.payment_term_id.display_name"/>.</span>
            </t>
            <br/>
            <br/>
            <br/><span style="font-size:12pt">If you have any questions or would like to discuss further, please feel free to</span>


            <a href="">
                contact us
            </a>
            <br/>
            <br/>
            <span style="font-size:12pt">Thank you for choosing Morgan!</span>
            <br/>
            <br/>
            <span style="font-size:12pt">Sincerely,</span>
            <br/>
            <span style="font-size:12pt">The Morgan Team.</span>
        </field>
        <field name="report_template" ref="sale.action_report_saleorder"/>
        <field name="report_name">Quotation</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
    </record>
</odoo>