<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_invoice_notification" model="mail.template">
            <field name="name">Invoice Notification</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="email_from">{{ (object.invoice_user_id.email_formatted or user.email_formatted) }}</field>

            <field name="subject">Thank you for your purchase</field>
            <field name="body_html" type="html">
                <span style="font-size:12pt">Dear <t t-out="object.partner_id.name"/></span>
                <br/>
                <br/>Thank you for your purchase!<br/>
                <br/>We would like to inform you that your order (<t t-out="object.name"/>) is now being processed.
                Please find attached your invoice for reference.
                <br/>
                <br/>Here's a summary of your order:
                <br/>
                <br/>(Include order details)
                <br/>
                <table class="table table-condensed rtl-table" name="invoice_line_table">
                    <thead>
                        <th>Item</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th with="15%" class="text-right">Tax Rate</th>
                        <th class="text-right">Subtotal</th>
                    </thead>
                    <tbody class="invoice_tbody">
                        <tr t-foreach="object.invoice_line_ids" t-as="l">
                            <span t-if="l.product_id.name!=l.name"><td><strong><span t-field="l.product_id.name"/></strong><br/><span t-field="l.name"/></td></span>
                            <span t-if="l.product_id.name==l.name"><td><span t-field="l.product_id.name"/></td></span>
                            <span t-if="l.move_id.move_type != 'in_refund'">
                            <td class="text-right">
                               <span t-field="l.quantity" t-field-options="{&quot;widget&quot;:&quot;integer&quot;}"/>
                                <span t-field="l.uom_id" groups="product.group_uom"/>
                            </td>
                            </span>
                           <span t-if="l.move_id.move_type != 'in_refund'">
                            <td class="text-right">
                              <span t-field="l.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: object.currency_id}"/>
                            </td>
                            </span>
                            <span t-if="l.move_id.move_type != 'in_refund'">
                            <td class="text-right">
                               <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_ids))"/>
                            </td>
                            </span>
                            <td class="text-right" id="subtotal">
                                <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: object.currency_id}"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br/>If you have any questions regarding your purchase, please feel free to

                <span style="font-size:12pt;font-weight:normal;text-decoration:underline">
                    <a href="https://mostafazaydan95-morganv15-stage-4851846.dev.odoo.com/contactus"
                       style="text-decoration:none;box-sizing:border-box;background-color:transparent;color:#01666b;">
                        contact us
                    </a>
                </span>
                <span style="font-size:12pt">.
                    <br/>
                    <br/>Thank you for choosing Morgan!
                    <br/>
                    <br/>Sincerely,
                    <br/>The Morgan Team.
                </span>
                <br/>
            </field>
            <field name="report_template" ref="account.account_invoices"/>
            <field name="report_name">Invoice Details</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_receipt_notification" model="mail.template">
            <field name="name">Receipt Notification</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="email_from">{{ (object.invoice_user_id.email_formatted or user.email_formatted) }}</field>

            <field name="subject">Thank you for your payment</field>
            <field name="body_html" type="html">
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">
                        <span style="font-size:12pt">Dear <t t-out="object.partner_id.name"/>
                            <br/>
                            <br/>Thank you for your payment!<br/>
                            <br/>We just wanted to let you know that your payment for the following amount (<t t-out="object.amount"/>) has been successful.
                                 Please find your receipt ({{ object.name }}) attached.
                            <br/>

                            <br/>If you have any questions regarding your recent purchase, please feel free to
                        </span>
                        <span style="font-size:12pt;font-weight:normal;text-decoration:underline">
                            <a href="https://mostafazaydan95-morganv15-stage-4851846.dev.odoo.com/contactus"
                               style="text-decoration:none;box-sizing:border-box;background-color:transparent;color:#01666b;">
                                contact us
                            </a>
                        </span>
                        <span style="font-size:12pt">.
                            <br/>
                            <br/>Thank you for choosing Morgan!
                            <br/>
                            <br/>Sincerely,
                            <br/>The Morgan Team.
                        </span>
                    <br/>
                </p>
            </field>
            <field name="report_template" ref="account.action_report_payment_receipt"/>
            <field name="report_name">Payment Receipt</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>