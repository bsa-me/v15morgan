<odoo>
    <record model="base.automation" id="invoice_notification_automation">
        <field name="name">Invoice Notification</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="trigger">on_create_or_write</field>
        <field name="state">code</field>
        <field name="code">
if record.state == 'post' and record.move_type == 'out_invoice':
  record.customer_invoice_notification()
        </field>
    </record>


    <record model="base.automation" id="receipt_notification_automation">
        <field name="name">Receipt Notification</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="trigger">on_create_or_write</field>

        <field name="state">code</field>
        <field name="code">
if record.payment_type == 'inbound' and record.partner_type == 'customer' and record.state == 'post':
  record.customer_receipt_notification()
        </field>
    </record>

    <record model="base.automation" id="quotation_notification_automation">
        <field name="name">Quotation Notification</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="trigger">on_create</field>
        <field name="state">code</field>
        <field name="code">
record.customer_quotation_notification()
        </field>
    </record>

    <record model="base.automation" id="refund_notification_automation">
        <field name="name">Refund Notification</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="trigger">on_create_or_write</field>
        <field name="state">code</field>
        <field name="code">
if record.state == 'posted' and record.move_type == 'in_refund':
    record.vendor_refund_notification()
        </field>
    </record>

</odoo>
