<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_account_move_invoice_form" model="ir.ui.view">
        <field name="name">inherit.account.move.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="payment_reminder_days_before" attrs="{'invisible':[('move_type','=','out_invoice')], 'required':[('move_type','=','out_invoice')]}"/>
                <field name="payment_reminder_days_after" attrs="{'invisible':[('move_type','=','out_invoice')], 'required':[('move_type','=','out_invoice')]}"/>
            </xpath>

        </field>
    </record>
</odoo>